package com.sekhar;

import java.io.File;

import lombok.Data;

@Data
public class ConvertjavaTojson {

	public static void main(String[] args) {

		Author at=new Author();
		at.setAuthorname("Rodjhonson");
		at.setEmail("Rod12@gmail");
		at.setNumber(8546124512l);
		
		Book b=new Book();
		b.setId(101);
		b.setName("Spring");
		b.setPrice(600.00);
		b.setAuthor(at);
		
		ObjectMapper map=new ObjectMapper();
		//converting
		map.writeValue(new File("books.Json"),b);
		
	}

}
