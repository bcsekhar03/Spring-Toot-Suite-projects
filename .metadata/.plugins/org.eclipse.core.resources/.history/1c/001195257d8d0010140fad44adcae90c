package com.sekhar;

import java.io.File;
import java.io.FileReader;
import com.google.gson.Gson;

public class Gson {

	public static void main(String[] args) {

		Order ord=new Order();
		ord.setId(50012);
		ord.setName("vishal");
		ord.setStatus("Confirmed");
		ord.setBillamount(1560.00);
		
		Gson gson = new Gson();                  // ✅ Create Gson object
        String json = gson.toJson(ord);          // ✅ Call toJson() on gson
        System.out.println(json);
		
		Order od=gson.fromJson(new FileReader(new File("order.json")),Order.class);
	}
}
